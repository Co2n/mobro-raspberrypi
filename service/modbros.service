[Unit]
Description=ModBros Monitoring
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/modbros/ModbrosMonitoring/scripts
ExecStart=/home/modbros/ModbrosMonitoring/service/modbros.sh
StandardOutput=null
StandardError=null
Restart=on-abort
User=modbros

[Install]
WantedBy=multi-user.target